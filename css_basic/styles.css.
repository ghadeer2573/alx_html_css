/* Flexbox containers */
body {
  display: flex;
  flex-direction: column; /* vertical stacking: header, main, footer */
}

main {
  display: flex;
  flex-direction: row; /* horizontal: article + aside */
  flex: auto; /* auto expand */
}

/* Article = 2/3 width */
article {
  flex: 2;
  overflow-y: auto;
}

/* Aside = 1/3 width */
aside {
  flex: 1;
  overflow-y: auto;
}

